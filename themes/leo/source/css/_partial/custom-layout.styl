.layout-wrap
  margin: block-margin 0
  
.layout-title
  font-size: 1.4em
  margin-bottom: 1em
  
.layout-wrap-inner
  .category-list,
  .category-list-child
    clearfix()
    line-height: 1.8em
  .category-list,
  .blogrolls-list
    a
      @extends $link
  .category-list-child
    margin-left: 24px
  li
    &:before
      content: '>'
      float: left
      padding: 0 16px 0 0
  .category-list-count
    margin-left: 8px
    color: color-grey
    &:before
      content: '('
    &:after
      content: ')'
  .blogrolls-title
    font-size: 1.5em
    font-weight: 600
    border-bottom: 1px solid #c2bcbc
    margin: 0.5em 0
  .blogrolls-exchange
    border-radius: 16px
    border: 3px dashed #66C3BC
    margin-bottom: 20px
    padding: 20px
    h2
      font-size: 1.3em
      font-weight: 600
      margin: -38px 0 10px 0;
      background: #66C3BC;
      color: #fff;
      width: 54%;
      border-radius: 3px;
      padding: 3px 5px;
      
.tag-cloud
  a
    @extends $link
    margin-right: 8px
    &:before
      content: '#'